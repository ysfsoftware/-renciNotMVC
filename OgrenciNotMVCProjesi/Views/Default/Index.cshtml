@using OgrenciNotMVCProjesi.Models.EntityFramework
@model List<TblDersler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<table class="table table-hover">
    <tr>
        <th>DERS ID</th>
        <th>DERS ADI</th>
        <th>İŞLEMLER</th>
    </tr>
    <tbody>
        @foreach(var drs in Model)
        {
        <tr>
            <td>@drs.DersID</td>
            <td>@drs.DersAd</td>
            <td>
                <a href="/Default/Sil/@drs.DersID" class="btn btn-danger">Sil</a>
                <a href="/Default/DersGetir/@drs.DersID" class="btn btn-warning">Güncelle</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<a href="/Default/YeniDers" class="btn btn-success">Yeni Ders Kaydı</a>