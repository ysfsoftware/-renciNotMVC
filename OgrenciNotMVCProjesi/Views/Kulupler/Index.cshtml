@using OgrenciNotMVCProjesi.Models.EntityFramework
@model List<TblKulupler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-hover">
    <tr>
        <th>KULÜP ID</th>
        <th>KULÜP ADI</th>
        <th>KULÜP KONTENJAN</th>
        <th>İŞLEMLER</th>
        
    </tr>
    <tbody>
        @foreach(var klp in Model)
        {
            <tr>
                <td>@klp.KulupID</td>
                <td>@klp.KulupAd</td>
                <td>@klp.KulupKontenjan</td>
                <td>
                    <a href="/Kulupler/Sil/@klp.KulupID" class="btn btn-danger">Sil</a>
                    <a href="/Kulupler/KulupGetir/@klp.KulupID" class="btn btn-warning">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Kulupler/YeniKulup" class="btn btn-success">Yeni Kulüp Ekle</a>

