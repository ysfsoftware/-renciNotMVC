@using OgrenciNotMVCProjesi.Models.EntityFramework
@model List<TblOgrenciler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table class="table table-hover">
    <tr>
        <th>ÖĞRENCİ ID</th>
        <th>ADI</th>
        <th>SOYADI</th>
        <th>CİNSİYET</th>
        <th>KULÜP</th>
        <th>İŞLEMLER</th>
        
    </tr>
    <tbody>
        @foreach (var ogrnc in Model)
        {
            <tr>
                <td>@ogrnc.OgrenciID</td>
                <td>@ogrnc.OgrenciAd</td>
                <td>@ogrnc.OgrenciSoyad</td>
                <td>@ogrnc.OgrenciCinsiyet</td>
                <td>@ogrnc.OgrenciKulup</td>
                <td>
                    <a href="/Ogrenciler/Sil/@ogrnc.OgrenciID" class="btn btn-danger">Sil</a>
                    <a href="/Ogrenciler/OgrenciGetir/@ogrnc.OgrenciID" class="btn btn-warning">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Ogrenciler/YeniOgrenci" class="btn btn-success">Yeni Öğrenci Ekle</a>
